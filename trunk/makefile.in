srcdir = @srcdir@
top_srcdir = @top_srcdir@

all check install mostlyclean clean distclean maintainer-clean::
	$(MAKE) -C src $@
	$(MAKE) $@-local

all-local:
check-local:
install-local:

mostlyclean-local:
clean-local: mostlyclean-local
	rm -f config.log
distclean-local: clean-local
	rm -f makefile config.cache config.status
maintainer-clean-local: distclean-local
	rm -f configure

